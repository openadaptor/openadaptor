<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">
  <description><![CDATA[    
  This adaptor does the following...
  
    * reads data from file (containing a record for each card in a stack from input/cards.csv)
    * discards Jokers (to a output/discarded.csv)
    * fans-out remaining records to filters by suit (each writing to separate log files e.g. output/spades.csv)
  
  Run it like this...
  
  java org.openadaptor.spring.SpringAdaptor -config fanout.xml -bean Adaptor
  
  You need the following in your classpath
  
    lib
    lib/openadaptor.jar
    lib/openadaptor-spring.jar
    lib/openadaptor-depends.jar
  
  Once it is running it will read the input file and produce the output files.
  ]]></description>
  
  
  <bean id="Adaptor" class="org.openadaptor.core.adaptor.Adaptor">
    <property name="messageProcessor" ref="Router"/>
  </bean>
  
  <bean id="Router" class="org.openadaptor.core.router.Router">
    <property name="processMap">
      <map>
        <entry key-ref="Reader" value-ref="MapConvertor"/>
        <entry key-ref="MapConvertor" value-ref="JokerFilter"/>
        <entry key-ref="JokerFilter">
          <list>
            <ref bean="HeartsFilter" />
            <ref bean="ClubsFilter" />
            <ref bean="SpadesFilter" />
            <ref bean="DiamondsFilter" />
          </list>
        </entry>

        <!-- Subsidiary pipelines -->

        <entry key-ref="JokerMap" value-ref="JokerLog"/>

        <entry key-ref="HeartsFilter" value-ref="HeartsMap"/>
        <entry key-ref="HeartsMap" value-ref="HeartsLog"/>

        <entry key-ref="ClubsFilter" value-ref="ClubsMap"/>
        <entry key-ref="ClubsMap" value-ref="ClubsLog"/>

        <entry key-ref="SpadesFilter" value-ref="SpadesMap"/>
        <entry key-ref="SpadesMap" value-ref="SpadesLog"/>

        <entry key-ref="DiamondsFilter" value-ref="DiamondsMap"/>
        <entry key-ref="DiamondsMap" value-ref="DiamondsLog"/>
      </map>
    </property>
    <property name="discardMap">
      <map>
        <entry key-ref="JokerFilter" value-ref="JokerMap"/>
      </map>
    </property>
  </bean>
  
  <bean id="Reader" class="org.openadaptor.auxil.connector.iostream.reader.FileReadConnector">
    <property name="filename" value="input/cards.csv" />
  </bean>
  
  <bean id="MapConvertor" class="org.openadaptor.auxil.convertor.delimited.DelimitedStringToOrderedMapConvertor">
    <description>
      Converts input into an ordered map with a field called suit and another called pips (e.g. "Spades,10").
    </description>
    <property name="fieldNames">
      <list>
        <value>suit</value>
        <value>pips</value>
      </list>
    </property>
  </bean>

  
  <bean id="JokerFilter" class="org.openadaptor.auxil.processor.javascript.JavascriptFilterProcessor">
    <description>
      Discard records that are Joker cards.
    </description>
    <property name="script">record.get('pips') == 'joker'</property>
    <property name="discardMatches" value="true" />
  </bean>

  
  <bean id="HeartsFilter" class="org.openadaptor.auxil.processor.javascript.JavascriptFilterProcessor">
    <description>
      Pass only records that are Hearts cards.
    </description>
    <property name="script">record.get('suit') == 'hearts'</property>
    <property name="discardMatches" value="false" />
  </bean>
  
  <bean id="ClubsFilter" class="org.openadaptor.auxil.processor.javascript.JavascriptFilterProcessor">
    <description>
      Pass only records that are Clubs cards.
    </description>
    <property name="script" value="record.get('suit') == 'clubs'" />
    <property name="discardMatches" value="false" />
  </bean>
  
  <bean id="SpadesFilter" class="org.openadaptor.auxil.processor.javascript.JavascriptFilterProcessor">
    <description>
      Pass only records that are Spades cards.
    </description>
    <property name="script" value="record.get('suit') == 'spades'" />
    <property name="discardMatches" value="false" />
  </bean>
  
  <bean id="DiamondsFilter" class="org.openadaptor.auxil.processor.javascript.JavascriptFilterProcessor">
    <description>
      Pass only records that are Diamonds cards.
    </description>
    <property name="script" value="record.get('suit') == 'diamonds'" />
    <property name="discardMatches" value="false" />
  </bean>
  


  <bean id="JokerMap" class="org.openadaptor.auxil.convertor.delimited.OrderedMapToDelimitedStringConvertor">
    <property name="outputHeader" value="false" />
    <property name="fieldNames">
      <list>
        <value>pips</value>
      </list>
    </property>
  </bean>
  
  <bean id="JokerLog" class="org.openadaptor.auxil.connector.iostream.writer.FileWriteConnector">
    <property name="filename" value="output/jokers.csv"/>
    <property name="append" value="false"/>
  </bean>
  


  <bean id="HeartsMap" class="org.openadaptor.auxil.convertor.delimited.OrderedMapToDelimitedStringConvertor">
    <property name="outputHeader" value="true" />
    <property name="fieldNames">
      <list>
        <value>suit</value>
        <value>pips</value>
      </list>
    </property>
  </bean>
  
  <bean id="HeartsLog" class="org.openadaptor.auxil.connector.iostream.writer.FileWriteConnector">
    <property name="filename" value="output/hearts.csv"/>
    <property name="append" value="false"/>
  </bean>



  <bean id="ClubsMap" class="org.openadaptor.auxil.convertor.delimited.OrderedMapToDelimitedStringConvertor">
    <property name="outputHeader" value="true" />
    <property name="fieldNames">
      <list>
        <value>suit</value>
        <value>pips</value>
      </list>
    </property>
  </bean>
  
  <bean id="ClubsLog" class="org.openadaptor.auxil.connector.iostream.writer.FileWriteConnector">
    <property name="filename" value="output/clubs.csv"/>
    <property name="append" value="false"/>
  </bean>



  <bean id="SpadesMap" class="org.openadaptor.auxil.convertor.delimited.OrderedMapToDelimitedStringConvertor">
    <property name="outputHeader" value="true" />
    <property name="fieldNames">
      <list>
        <value>suit</value>
        <value>pips</value>
      </list>
    </property>
  </bean>
  
  <bean id="SpadesLog" class="org.openadaptor.auxil.connector.iostream.writer.FileWriteConnector">
    <property name="filename" value="output/spades.csv"/>
    <property name="append" value="false"/>
  </bean>



  <bean id="DiamondsMap" class="org.openadaptor.auxil.convertor.delimited.OrderedMapToDelimitedStringConvertor">
    <property name="outputHeader" value="true" />
    <property name="fieldNames">
      <list>
        <value>suit</value>
        <value>pips</value>
      </list>
    </property>
  </bean>
  
  <bean id="DiamondsLog" class="org.openadaptor.auxil.connector.iostream.writer.FileWriteConnector">
    <property name="filename" value="output/diamonds.csv"/>
    <property name="append" value="false"/>
  </bean>  
</beans>