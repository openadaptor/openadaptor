<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
  
  <bean id="Adaptor" class="org.openadaptor.core.adaptor.Adaptor">
    <property name="pipeline">
      <list>
        <ref bean="ReadNode"/>
        <ref bean="WriteNode"/>
      </list>
    </property>
  </bean>
  
  <bean id="ReadNode" class="org.openadaptor.core.node.ReadNode">
    <property name="connector">
      <bean class="org.openadaptor.core.connector.TestReadConnector">
        <property name="dataString" value="foobar"/>
      </bean>
    </property>
  </bean>
  
  <bean id="WriteNode" class="org.openadaptor.core.node.WriteNode">
    <property name="connector">
      <bean class="org.openadaptor.core.connector.TestWriteConnector">
        <property name="expectedOutput" value="foobar"/>
      </bean>
    </property>
  </bean>

</beans>